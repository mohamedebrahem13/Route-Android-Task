<!-- edit_text_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/semi_transparent_white" /> <!-- Background color -->
            <corners android:radius="22dp" /> <!-- Corner radius -->
        </shape>
    </item>
    <!-- Stroke around the shape -->
    <item android:top="1dp" android:right="1dp" android:left="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent fill for stroke padding -->
            <stroke
                android:width="1dp"
                android:color="#004182" /> <!-- Border color -->
            <corners android:radius="22dp" /> <!-- Corner radius, should match the background shape -->
        </shape>
    </item>
</layer-list>
